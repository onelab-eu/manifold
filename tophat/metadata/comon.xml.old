<metadata>
    <platform>
        <platform>comon</platform>
        <platform_description>CoMon</platform_description>
		<platform_url>http://comon.cs.princeton.edu/</platform_url>
    </platform>
    <gateway>
		<type>html</type>
		<url>http://comon.cs.princeton.edu/</url>
    </gateway>
    <methods>
        <method name='nodes'>
            <capabilities>
                <from>true</from>
                <selection>true</selection>
                <projection>true</projection>
                <order>true</order>
                <limit>true</limit>
                <offset>true</offset>
            </capabilities>
            <fields>
                <field>
                    <field>architecture</field>
                    <header>A</header>
                    <title>Architecture name</title>
                    <description>The node architecture</description>
                    <resource_type>node</resource_type>
                    <info_type>characteristic</info_type>
                    <value_type>string</value_type>
                    <unit>string</unit>
                    <allowed_values>x86_64,i386,n/a</allowed_values>
                    <disabled>true</disabled>
                </field>
                <field>
                    <field>memory_size</field>
                    <header>MS</header>
                    <title>Memory size</title>
                    <description>The memory size (RAM) available on the node. For reference, the current PlanetLab hardware requirement is 4 GB</description>
                    <resource_type>node</resource_type>
                    <info_type>characteristic</info_type>
                    <value_type>int</value_type>
                    <unit>GB</unit>
                    <allowed_values>1,128</allowed_values>
                    <disabled>true</disabled>
                </field>
                <field>
                    <field>cpu_cores</field>
                    <header>CC</header>
                    <title>Number of CPU cores</title>
                    <description>The number of CPU cores on the node. For reference, the current PlanetLab hardware requirement is 4 cores min. (Older nodes may have fewer cores)</description>
                    <resource_type>node</resource_type>
                    <info_type>characteristic</info_type>
                    <value_type>int</value_type>
                    <unit>int</unit>
                    <allowed_values>1,8</allowed_values>
                    <disabled>true</disabled>
                </field>
                <field>
                    <field>no_cpus</field>
                    <header>CN</header>
                    <title>Number of CPUs</title>
                    <description>The number of CPUs on the node. For reference, the current is 1 (if quad core) or 2 (if dual core)</description>
                    <resource_type>node</resource_type>
                    <info_type>characteristic</info_type>
                    <value_type>int</value_type>
                    <unit>int</unit>
                    <allowed_values>1,8</allowed_values>
                    <disabled>true</disabled>
                </field>

                <field>
                    <field>no_cpus_n</field>
                    <header>CPC</header>
                    <title>Number of cores per CPU</title>
                    <description>The number of cores per CPUs on the node</description>
                    <resource_type>node</resource_type>
                    <info_type>characteristic</info_type>
                    <value_type>int</value_type>
                    <unit>int</unit>
                    <allowed_values>1,8</allowed_values>
                    <disabled>true</disabled>
                </field>
                <field>
                    <field>cpu_clock</field>
                    <header>CR</header>
                    <title>CPU clock rate</title>
                    <description>The clock rate for the CPUs on the node. For reference, the current PlanetLab hardware requirement is 2.4 GHz</description>
                    <resource_type>node</resource_type>
                    <info_type>characteristic</info_type>
                    <value_type>int</value_type>
                    <unit>GHz</unit>
                    <allowed_values>1,8</allowed_values>
                    <disabled>true</disabled>
                </field>
                <field>
                    <field>bw_limit</field>
                    <header>BW</header>
                    <title>Bandwidth limit</title>
                    <description>The bandwidth limit is a cap on the total outbound bandwidth usage of a node. It is set by the site administrator (PI). For more details see Bandwidth Limits (planet-lab.org)</description>
                    <resource_type>node</resource_type>
                    <info_type>characteristic</info_type>
                    <value_type>int</value_type>
                    <unit>Kbps</unit>
                    <allowed_values>0,inf</allowed_values>
                    <disabled>true</disabled>
                </field>
                <field>
                    <field>disk_size</field>
                    <header>DS</header>
                    <title>Disk size</title>
                    <description>The size of the hard disk available on the node. For reference, the current PlanetLab hardware requirement is 500 GB</description>
                    <resource_type>node</resource_type>
                    <info_type>characteristic</info_type>
                    <value_type>int</value_type>
                    <unit>GB</unit>
                    <allowed_values>0,inf</allowed_values>
                    <disabled>true</disabled>
                </field>
                <field>
                    <field>uptime</field>
                    <header>UT</header>
                    <title>Uptime</title>
                    <description>The continuous uptime until the moment that the page is loaded, as reported by the CoMon html query API.</description>
                    <resource_type>node</resource_type>
                    <info_type>performance</info_type>
                    <value_type>int</value_type>
                    <unit>days</unit>
                    <allowed_values>0,inf</allowed_values>
                    <disabled>true</disabled>
                </field>
                <field>
                    <field>disk_u</field>
                    <header>DU</header>
                    <title>Disk current utilization</title>
                    <description>The amount of disk space currently consumed.</description>
                    <resource_type>node</resource_type>
                    <info_type>utilization</info_type>
                    <value_type>int</value_type>
                    <unit>GB</unit>
                    <allowed_values>0,inf</allowed_values>
                    <disabled>true</disabled>
                </field>
                <field>
                    <field>disk_free</field>
                    <header>DF</header>
                    <title>Disk space free</title>
                    <description>The amount of disk space currently available.</description>
                    <resource_type>node</resource_type>
                    <info_type>utilization</info_type>
                    <value_type>int</value_type>
                    <unit>GB</unit>
                    <allowed_values>0,inf</allowed_values>
                    <disabled>true</disabled>
                </field>


                <field>
                    <field>hostname</field>
                    <header></header>
                    <title></title>
                    <description></description>
                    <resource_type></resource_type>
                    <info_type></info_type>
                    <value_type>string</value_type>
                    <unit>string</unit>
                    <allowed_values></allowed_values>
                </field>
            </fields>
            <keys>
                <key>hostname</key>
            </keys>
        </method>
    </methods>
</metadata> 
